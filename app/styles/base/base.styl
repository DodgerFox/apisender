body
	position relative
	min-width 320px
	width 100%
	color #141414
	font-weight 400

	&.fixed
		overflow hidden


html
	font-family Montserrat, Arial, sans-serif
	font-size 62.5%
	line-height 1.4
	letter-spacing 0
	min-width 320px
	margin-left auto
	margin-right auto


section
	padding-top 80px
	padding-bottom 100px
	+to-width(420px)
		padding-top 40px
		padding-bottom 40px

.section

	&-header
		display flex
		align-items center
		justify-content space-between
		+to-width(640px)
			flex-direction column
			align-items flex-start

	&-title
		color #141414
		font-size 36px
		font-weight 700
		line-height 50px
		padding-bottom 15px
		text-align center
		span
			color #eeb621
		+to-width(992px)
			font-size 32px
			line-height 46px
		+to-width(640px)
			font-size 28px
			line-height 40px
		+to-width(520px)
			font-size 26px
			line-height 34px

	&-text
		color #848484
		font-size 22px
		font-weight 400
		line-height 36px
		text-align center
		max-width 800px
		margin 0 auto
		+to-width(992px)
			font-size 18px
			line-height 32px
		+to-width(640px)
			font-size 14px
			line-height 26px

.wrap
	position relative
	padding 0 30px
	width 100%
	margin-left auto
	margin-right auto
	max-width 1260px
	+to-width(767px)
		padding 0 15px

.registration__btn
	margin-top 10px
	background-color #3e3e3d
	padding 4px
	height 50px
	position relative
	overflow hidden
	cursor pointer
	&:after
		content ''
		position absolute
		top -180px
		bottom -180px
		right -20%
		left 60%
		background-color #fbb040
		transform rotate(40deg)
		transition 0.3s all
	&:hover
		.registration__button
			color #fbb040
		&:after
			left 0

.registration__button
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	background-color white
	border none
	color #141414
	font-weight 700
	font-size 14px
	text-transform uppercase
	position relative
	z-index 1
	transition 0.3s all
	+to-width(420px)
		font-size 13px

.figures
	position absolute
	left -100px
	top 0
	right -100px
	bottom 0
	justify-content space-between
	display flex

.main
	display flex
	flex-direction column
	min-height 100vh
	position relative
	z-index 2
