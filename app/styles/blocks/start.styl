.start
  &-body
    margin-top 55px
    display flex
    align-items center
    justify-content space-between
    margin-left -5px
    margin-right -5px
    +to-width(920px)
      flex-wrap wrap
      justify-content center
    +to-width(640px)
      margin-top 30px

  &-arrow
    +to-width(1100px)
      display none

  &-item
    width 310px
    background-color white
    border 5px solid #fbb040
    box-shadow 0 1px 25px 2px rgba(194, 194, 194, 0.4)
    padding 35px 30px
    margin 0 6px
    padding-top 20px
    position relative
    t()
    +to-width(1100px)
      padding 30px 18px
    +to-width(992px)
      padding 30px 15px
      width 280px
      min-width 280px
      margin-bottom 12px

    &__icon
      position absolute
      right 0
      bottom 50px
      min-height 126px

    &__title
      font-size 22px
      font-weight 700
      color #141414
      line-height 30px
      padding-bottom 8px
      margin-top 15px
      position relative
      padding-bottom 45px
      &:after
        content ''
        position absolute
        height 2px
        width 36px
        background-color #000000
        left 0
        bottom 25px
      +to-width(1100px)
        font-size 20px

    &__text
      font-size 14px
      line-height 20px
      color #141414
      font-weight 700
      position relative

    &__button
      height 43px
      width 100%
      display flex
      justify-content center
      align-items center
      color white
      font-size 14px
      font-weight 600
      background-color #1f1f1f
      margin-top 20px
      position relative
      t()
      &:hover
        opacity 0.8
