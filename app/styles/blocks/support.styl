.support
  padding-top 150px
  +to-width(420px)
    padding-top 130px

  &-body
    display flex
    flex-wrap wrap
    margin-left -20px
    margin-right -20px
    margin-top 30px
    +to-width(420px)
      margin 0
      margin-top 10px

  &-item
    display flex
    align-items center
    justify-content center
    height 60px
    background-color white
    border 1px solid #d1d1d1
    padding 0 25px
    margin 15px 20px
    t()
    +to-width(767px)
      padding 0 20px
      margin 10px
      height 55px
    +to-width(420px)
      width 100%
      justify-content flex-start
      margin 10px 0

    &:hover
      border 1px solid #fbb040

    p
      color #141414
      font-size 22px
      font-weight 700
      +to-width(767px)
        font-size 18px

    img
      margin-right 14px

  &-text
    font-size 22px
    font-weight 600
    text-align center
    margin-top 50px
    +to-width(420px)
      font-size 18px
      line-height 24px
      margin-top 30px
    a
      color #fbb040
      text-decoration underline
      &:hover
        text-decoration none
