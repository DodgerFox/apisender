.footer
  background-color #1f1f1f
  padding-top 50px

  &-logo
    margin 0 auto
    width fit-content
    img
      display block
      margin 0 auto
    &__text
      text-align center
      margin-top 17px
      color #000000
      font-size 9px
      font-weight 400
      letter-spacing 2.09px
      line-height 14px
      text-transform uppercase


  &-item
    max-width 250px
    min-width 170px
    margin 0 10px
    +to-width(900px)
      margin-top 10px
    +to-width(800px)
      margin-top 40px
    +to-width(640px)
      width 50%
      min-width inherit
      margin 0
      margin-top 20px
    +to-width(360px)
      width 100%
    &__title
      color #464646
      font-size 22px
      font-weight 700
      padding-bottom 25px

  &-list
    display flex
    flex-wrap wrap
    &__item
      font-size 14px
      font-weight 400
      line-height 20px
      width 100%
      padding-right 5px
      padding-bottom 15px
      a
        color #ffffff
        t()
        &:hover
          color #ddbd3e


  &-main
    padding 54px 0
    display flex
    justify-content space-between
    border-bottom 1px solid #2e2e2e
    margin-left -10px
    margin-right -10px
    +to-width(767px)
      display flex
      flex-wrap wrap
      justify-content center
    +to-width(640px)
      margin 0
      padding-top 30px
    +to-width(360px)
      justify-content flex-start

  &-social
    display flex
    padding 25px 0
    border-top 1px solid #e0e0e0
    border-bottom 1px solid #e0e0e0
    +to-width(520px)
      flex-direction column

    &__title
      color #464646
      font-size 22px
      font-weight 700
      padding-bottom 33px
      +to-width(640px)
        margin-right 30px
      +to-width(520px)
        padding-bottom 20px

    &-list
      display flex
      align-items center

    &__item
      margin-right 25px
      &:last-child
        margin-right 0
      svg
        t()
        &:hover
          fill #eeb621

  &-bottom
    display flex
    justify-content center
    align-items center
    padding-top 36px
    padding-bottom 50px
    +to-width(767px)
      flex-direction column
      align-items center

  &-info
    color #ffffff
    font-weight 600
    line-height 22px
    font-size 16px


.made-by
  display flex
  align-items center
  color #000000!important
  +to-width(767px)
    margin-top 20px
  p
    line-height 17px
    font-size 12px
    white-space nowrap
    &:last-child
      font-weight 700
