.checkbox
  display flex
  align-items center
  justify-content center
  margin-top 10px
  margin-bottom 5px
  position relative
  z-index 1
  p
    margin-left 15px
    font-size 14px
    font-weight 600
    line-height 18px
    color #141414
    +to-width(420px)
      font-size 11px
      line-height 16px
    a
      color #fbb040
      text-decoration underline
      &:hover
        text-decoration none
.toggleButton
	cursor pointer
	display flex
	-webkit-transform-origin 50% 50%
	align-items center
	-webkit-transform-style preserve-3d
	transform-style preserve-3d
	transition -webkit-transform .14s ease
	transition transform .14s ease
	transition transform .14s ease, -webkit-transform .14s ease
	input
		display none
		& + div
			border 3px solid rgba(255, 255, 255, 0.2)
			border-radius 50%
			position relative
			width 30px
			height 30px
			svg
				fill none
				stroke-width 3.6
				stroke #fbb040
				stroke-linecap round
				stroke-linejoin round
				width 30px
				height 30px
				display block
				position absolute
				left -3px
				top -3px
				right -3px
				bottom -3px
				z-index 1
				stroke-dashoffset 124.6
				stroke-dasharray 0 162.6 133 29.6
				transition all .4s ease 0s
			&:before
				opacity 0
				-webkit-transform scale(0.3) translate(-50%, -50%) rotate(45deg)
				transform scale(0.3) translate(-50%, -50%) rotate(45deg)
				-webkit-animation bounceInBefore .3s linear forwards .3s
				animation bounceInBefore .3s linear forwards .3s
			&:after
				opacity 0
				-webkit-transform scale(0.3) translate(-50%, -50%) rotate(-45deg)
				transform scale(0.3) translate(-50%, -50%) rotate(-45deg)
				-webkit-animation bounceInAfter .3s linear forwards .3s
				animation bounceInAfter .3s linear forwards .3s
		&:checked
			& + div
				svg
					stroke-dashoffset 162.6
					stroke-dasharray 0 162.6 28 134.6
					transition all .4s ease .2s
				&:before
					opacity 0
					-webkit-transform scale(0.3) translate(-50%, -50%) rotate(45deg)
					transform scale(0.3) translate(-50%, -50%) rotate(45deg)
					-webkit-animation bounceInBeforeDont .3s linear forwards 0s
					animation bounceInBeforeDont .3s linear forwards 0s
				&:after
					opacity 0
					-webkit-transform scale(0.3) translate(-50%, -50%) rotate(-45deg)
					transform scale(0.3) translate(-50%, -50%) rotate(-45deg)
					-webkit-animation bounceInAfterDont .3s linear forwards 0s
					animation bounceInAfterDont .3s linear forwards 0s
.toggleButton input + div:before, .toggleButton input + div:after
	content ''
	width 3px
	height 16px
	background #00b1eb
	position absolute
	left 50%
	top 50%
	border-radius 5px
