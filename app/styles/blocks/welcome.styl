.welcome
  width 100%
  height 100vh
  min-height 640px
  padding 0
  padding-top 74px
  background-position top center
  background-size cover
  color white
  position relative
  border-bottom 6px solid #fbb040
  +to-width(540px)
    height auto
    padding-top 90px
  &:after
    content ''
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    background-color #2d2d2d
    opacity 0.4
  .wrap
    height 100%
    display flex
    align-items center
    justify-content space-between

  &-form
    position relative
    z-index 2
    +to-width(920px)
      display none

  .registration
    width 460px
    +to-width(1200px)
      width 400px

  &-content
    position relative
    max-width 660px
    z-index 2
    padding-right 20px
    p
      font-size 18px
      font-weight 600
      line-height 28px
      padding-bottom 24px
      a
        color #51d4ff
        position relative
        &:after
          content ''
          position absolute
          bottom 0
          left 0
          right 0
          height 1px
          background-color #51d4ff
          t()
        &:hover
          &:after
            opacity 0
      +to-width(1200px)
        font-size 16px
        line-height 24px
      +to-width(640px)
        font-size 14px
        line-height 20px

  &-title
    font-size 36px
    font-weight 700
    line-height 50px
    padding-bottom 60px
    position relative
    &:after
      content ''
      position absolute
      left 0
      bottom 30px
      height 4px
      width 86px
      background-color #fbb040
    +to-width(1200px)
      font-size 32px
      line-height 40px
    +to-width(640px)
      font-size 26px

  &-lines
    left 0
    right 0
    bottom 0
    position absolute
    display flex
    z-index 2

    &__item
      height 8px
      width 33.333%
      background-color #51d4ff
      &:nth-child(2)
        background-color #77cc9b
      &:last-child
        background-color #f18d47
