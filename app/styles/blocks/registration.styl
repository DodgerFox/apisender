.registration
  background-color #ffffff
  width 577px
  display flex
  flex-direction column
  padding 40px
  padding-top 50px
  position relative
  +to-width(640px)
    width 100%
  +to-width(420px)
    padding 25px 20px
    padding-bottom 10px

  &__input
    background-color #f7f7f7
    color #828282
    font-size 14px
    font-weight 600
    border none
    margin 8px 0
    height 54px
    padding 0 30px
    +placeholder()
      color #bebebe
    &.has-error
      border 1px solid #ff2e2e

  &__textarea
    background-color #f7f7f7
    color #bebebe
    font-size 14px
    font-weight 700
    border none
    margin 8px 0
    height 260px
    padding 23px 30px
    line-height 20px
    +placeholder()
      color #bebebe
    +to-width(420px)
      height 180px

  &-info
    display flex
    align-items center
    justify-content center
    font-size 16px
    font-weight 600
    line-height 22px
    padding 10px 0
    +to-width(420px)
      font-size 14px

    &__login
      color #141414
      display flex
      position relative
      t()
      &:hover
        color #737373

    &__forget
      color #141414
      margin-left 60px
      position relative
      t()
      &:hover
        color #737373

      &:after
        content ''
        position absolute
        width 8px
        height 8px
        border-radius 5px
        background-color #fbb040
        left -32px
        top 6px
      +to-width(420px)
        margin-left 40px
